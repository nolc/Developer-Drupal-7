/**
 * Implements hook_node_load()
 */
function anotacion_node_load($nodes, $types) {

  global $user;

  // Check to see if the person viewing the node is the author. If not then
  // hide the annotation.
  foreach ($nodes as $node) {
     if ($user->uid != $node->uid) {
        unset($node->anotacion);
     }
  }
}